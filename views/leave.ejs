                    <div class="col-xl-9 col-lg-8 col-md-12">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card ctm-border-radius shadow-sm">
                                    <div class="card-header">
                                        <h4 class="card-title mb-0">Trip Details</h4>
                                    </div>
                                    <div class="card-body">
                                        <form id="main_form" method="post">
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <label>
                                                            Serial Type:
                                                            <span class="text-danger">*</span>
                                                        </label>
                                                        <select name="option" class="form-control select">
                                                            <option>SD</option>
                                                            <option>SI</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 leave-col">
                                                    <div class="form-group">
                                                        <label>Place:</label>
                                                        <input type="text" name="place" class="form-control"
                                                            placeholder="Delhi">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <label>From</label>
                                                        <input type="text" name="from"
                                                            class="form-control datetimepicker">
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 leave-col">
                                                    <div class="form-group">
                                                        <label>To</label>
                                                        <input type="text" name="to"
                                                            class="form-control datetimepicker">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <label>
                                                            Bill to:
                                                            <span class="text-danger"></span>
                                                        </label>
                                                        <select name="bill" class="form-control select">
                                                            <option>Customer</option>
                                                            <option>Not to Customer</option>
                                                            <option>Internal</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 leave-col">
                                                    <div class="form-group">
                                                        <label>
                                                            Logistics:
                                                            <span class="text-danger"></span>
                                                        </label>
                                                        <select name="log" multiple class="form-control select">
                                                            <option>Logistics</option>
                                                            <option>Flights</option>
                                                            <option>Train</option>
                                                            <option>Taxi</option>
                                                            <option>Bus</option>
                                                            <option>Visa</option>
                                                            <option>Insurance</option>
                                                            <option>Others</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="form-group mb-0">
                                                        <label>Customer Name & Address: </label>
                                                        <textarea name="cdetails" class="form-control"
                                                            rows=4></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="form-group mb-0">
                                                        <label>Description: </label>
                                                        <textarea name="desc" class="form-control" rows=4></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="text-center">
                                                <!-- <a href="javascript:void(0);"
